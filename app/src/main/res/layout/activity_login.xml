<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goddessqueenmother.goddessqueenmother.LoginActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/mainUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="cursive"
        android:inputType="textPersonName"
        android:text="Username"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="115dp" />

    <EditText
        android:id="@+id/mainPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="191dp" />

    <TextView
        android:id="@+id/mainLoginMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter Your Username and Password"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="60dp" />

</android.support.constraint.ConstraintLayout>
